{
  "summary": "Deploy a container.",
  "description": [
    "Buildhost commands used: podman skopeo"
  ],
  "schema_2": {
    "inputs": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "images"
      ],
      "properties": {
        "images": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "options": {
      "additionalProperties": false,
      "properties": {
        "exclude": {
          "type": "array",
          "description": "Exclude paths from the deployment",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "remove-signatures": {
          "type": "boolean",
          "default": false,
          "description": "Obsolete. Does nothing."
        }
      }
    }
  }
}
