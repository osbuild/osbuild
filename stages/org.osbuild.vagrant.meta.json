{
  "summary": "Create a Vagrant box",
  "description": [
    "Creates the required files for a Vagrant box, intended to be used in with the",
    "org.osbuild.tar stage to tar up the metadata, Vagrantfile and VM image.",
    "This stage requires `cp` and `qemu-img`.",
    "Testing:",
    "vagrant box add --name my-box /path/to/the/new.box",
    "vagrant init my-box",
    "vagrant up"
  ],
  "schema_2": {
    "options": {
      "anyOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "provider"
          ],
          "properties": {
            "provider": {
              "type": "string",
              "enum": [
                "libvirt"
              ]
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "provider",
            "virtualbox"
          ],
          "properties": {
            "provider": {
              "type": "string",
              "enum": [
                "virtualbox"
              ]
            },
            "virtualbox": {
              "type": "object",
              "description": "VirtualBox specific settings",
              "additionalProperties": false,
              "required": [
                "mac_address"
              ],
              "properties": {
                "mac_address": {
                  "type": "string",
                  "pattern": "^[a-fA-F0-9]{12}$"
                }
              }
            }
          }
        }
      ]
    },
    "inputs": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "image"
      ],
      "properties": {
        "image": {
          "type": "object",
          "additionalProperties": true
        }
      }
    }
  }
}
